<%- include('header') -%>

    <body>


        <div id="heading" class="box">
            <h1 style="color:green">
                <%=day_of_wk%>'s <br>Todo List
            </h1>
        </div>
        <div class="box">
            <% for(var i=0; i < tasks.length; i++){ %>
                <div class="item">
                    <input type="checkbox">
                    <p>
                        <%=tasks[i].name%>
                    </p>
                </div>
                <% } %>
                    <form class="item" action="/" method="post">
                        <input type="text" name="item" placeholder="New" autocomplete="off">
                        <button type="submit" name="button">+</button>
                    </form>
        </div>
    </body>
<%- include('footer') -%>